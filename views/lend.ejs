                </ul>
            </div>
        </div>
    </nav>

    <div class="content-wrapper">
        <h1 class="text-center">Borrower Data</h1>
        <div class="row" id="borrower-data">
            <!-- Data will be populated here -->
        </div>
    </div>

    <footer class="footer">
        <p>&copy; 2024 Lendo. All rights reserved.</p>
    </footer>

    <script>
        const borrowerData = [
            { name: 'John Doe', mobile: '123-456-7890', email: 'john@example.com', address: '123 Main St', itemRequested: 'Book A' },
            { name: 'Jane Smith', mobile: '987-654-3210', email: 'jane@example.com', address: '456 Elm St', itemRequested: 'Book B' }
        ];

        function populateCards(data) {
            const container = document.getElementById('borrower-data');
            container.innerHTML = ''; // Clear existing data

            data.forEach(borrower => {
                const card = `
                    <div class="col-12 mb-4">
                        <div class="card shadow-sm w-100">
                            <div class="card-body">
                                <h5 class="card-title">${borrower.name}</h5>
                                <p class="card-text"><strong>Mobile:</strong> ${borrower.mobile} | <strong>Email:</strong> ${borrower.email}</p>
                                <p class="card-text"><strong>Address:</strong> ${borrower.address} | <strong>Item Requested:</strong> ${borrower.itemRequested}</p>
                            </div>
                        </div>
                    </div>
                `;
                container.innerHTML += card; // Add new card to the container
            });
        }

        // Call the function to populate the cards
        populateCards(borrowerData);
    </script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

